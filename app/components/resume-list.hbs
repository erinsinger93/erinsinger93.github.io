{{#each this.resumeItems as |company|}}
  <div class="experience experience--{{company.name}} display-flex align-items-center">
    <div class="experience__text">
      {{#each company.roles as |role|}}
        <div class="display-flex align-items-center">
          <h3 aria-label={{role.label}} class="experience__title">{{company.name}}</h3>
          <span class="experience__divider" aria-hidden="true">&nbsp; | &nbsp;</span>
          <span class="experience__timeline" aria-hidden="true">{{role.start}} - {{role.end}}</span>
        </div>
        <span class="experience__job-title" aria-hidden="true">{{role.title}}</span>
        <ul class="experience__description experience__description--current-role serif">
          {{#each role.description as |line|}}
            <li>{{line}}</li>
          {{/each}}
        </ul>
      {{/each}}
    </div>
    <div class="experience__img-container experience__img-container--{{company.name}}">
      <img class="experience__img experience__img--{{company.name}} img-responsive" src={{company.asset}} />
    </div>
  </div>
{{/each}}
